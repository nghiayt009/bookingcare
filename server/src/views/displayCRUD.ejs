<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta http-equiv="X-UA-Compatible" content="IE=edge" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Get CRUD</title>
    <style>
      table {
        font-family: arial, sans-serif;
        border-collapse: collapse;
        width: 100%;
      }

      td,
      th {
        border: 1px solid #dddddd;
        text-align: left;
        padding: 8px;
      }

      tr:nth-child(even) {
        background-color: #dddddd;
      }
      .btn-edit {
        background-color: orange;
        outline: none;
        border: none;
        height: 24px;
        width: 60px;
        border-radius: 3px;
        cursor: pointer;
      }
      .btn-delete {
        background-color: red;
        outline: none;
        border: none;
        height: 24px;
        width: 60px;
        border-radius: 3px;
        cursor: pointer;
      }
    </style>
  </head>
  <body>
    <table>
      <tr>
        <th>Email</th>
        <th>Firstname</th>
        <th>Lastname</th>
        <th>Address</th>
        <th>Action</th>
      </tr>
      <% for(let i=0; i<dataTable.length; i++) {%>
        <tr>
          <th>
            <%= dataTable[i].email%>
          </th>
          <th>
            <%= dataTable[i].firstName%>
          </th>
          <th>
            <%= dataTable[i].lastName%>
          </th>
          <th>
            <%= dataTable[i].address%>
          </th>
          <th>
            <a href="/edit-crud?id=<%= dataTable[i].id %> " class="btn-edit" type="button">Edit</a>
            <a href="/delete-crud?id=<%= dataTable[i].id %> " class="btn-delete" type="button">Delete</a>
          </th>
        </tr>
     <% } %>
      
    </table>
  </body>
</html>
